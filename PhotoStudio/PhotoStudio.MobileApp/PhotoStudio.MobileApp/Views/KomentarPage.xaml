<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:vm="clr-namespace:PhotoStudio.MobileApp.ViewModels"
             x:Class="PhotoStudio.MobileApp.Views.KomentarPage">
    <ContentPage.BindingContext>
        <vm:KomentarViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label FontSize="Large" HorizontalOptions="Center" Text="Ostavite Vaš utisak o fotografu kojeg ste rezervisali"></Label>
            <Label Text="Ime fotografa:"></Label>
            <Entry IsReadOnly="True"  Text="{Binding _fotograf.Ime}"></Entry>
            <Label Text="Prezime fotografa:"></Label>
            <Entry IsReadOnly="True"  Text="{Binding _fotograf.Prezime}"></Entry>

            <Label Text="Datum:"></Label>
            <DatePicker IsEnabled="False" Date="{Binding DatumKomentara}"></DatePicker>
            <Label Text="Komentar:"></Label>
            <Entry  Text="{Binding KomentarOpis}" HeightRequest="200"></Entry>
            <Button Command="{Binding KomentarisiCommand}" Text="Komentarisi"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>