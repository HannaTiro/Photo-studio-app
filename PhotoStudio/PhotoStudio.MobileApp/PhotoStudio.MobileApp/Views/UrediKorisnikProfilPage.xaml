<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:vm="clr-namespace:PhotoStudio.MobileApp.ViewModels"
             x:Class="PhotoStudio.MobileApp.Views.UrediKorisnikProfilPage"
             BackgroundColor="RosyBrown">
    <ContentPage.BindingContext>
        <vm:UrediKorisnikProfilViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ime:"></Label>
            <Entry  Text="{Binding ImeKorisnika}"></Entry>

            <Label Text="Prezime:"></Label>
            <Entry  Text="{Binding PrezimeKorisnika}"></Entry>

            <Label Text="Email:"></Label>
            <Entry  Text="{Binding Email}"></Entry>

            <Label Text="Telefon"></Label>
            <Entry  Text="{Binding Telefon}"></Entry>

            <Button Command="{Binding SpasiIzmjeneCommand}" Text="Spasi izmjene"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>